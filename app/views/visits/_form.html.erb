<%= form_for [@location, @visit] do |f| %>


	<%= f.select(:user_id, @select_user, :prompt => 'Select your user') %>

	<br/>From Date:<%= f.datetime_select(:from_date, default: Time.now + 1.days ) %>
	<br/>To Date:<%= f.datetime_select(:to_date, default: Time.now + 1.days ) %>
	<br/>
	<%= f.submit "Save" %>
<% end %>

<button><a href='<%= location_visits_path %>'>cancel</a></button>